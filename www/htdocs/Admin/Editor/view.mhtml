<%args>
	$name => undef
</%args>
<%perl>
	if (defined($name)) {
		my $msg = $npdbh->getPage($name);
		if (defined($msg) && ($msg ne "")) {
			print "Message <B>$name</B> contains:<HR>\n";
			print $msg;
			print "<HR>\n";
		} else {
			print "Sorry, a problem occurred while retrieving $name from the database.\n";
		}
	}
</%perl>
