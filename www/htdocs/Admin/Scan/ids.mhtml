sub getRule {
	my $dbh     = shift;
	my $sid	    = shift;
	my $np      = shift;

	my $h = $np->db->getSnortRuleEntry($sid);
	return undef unless (defined $h && ref($h) eq 'HASH');
	
	my($action, $proto, $sip, $sport, $dir, $dip, $dport, $options) =
		split(/\s+/, $h->{rule}, 8);

	$h->{action}	= $action;
	$h->{proto}	= $proto;
	$h->{srcip}	= $sip;
	$h->{srcport}	= $sport;
	$h->{dir}	= $dir;
	$h->{dstip}	= $dip;
	$h->{dstport}	= $dport;
	$h->{options}	= $options; 
	
	return $h;
}

