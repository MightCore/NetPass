sub makeSoapConnection {
	my $np   = shift;
	my $host = shift;
	my $port = shift;

        my $proxy = "tcp://$host:$port";
        my $soap  = SOAP::Lite->new(
                                    uri   => 'tcp://netpass/NetPass/API',
                                    proxy => $proxy,
                                   );
        return undef unless defined $soap;

        # check to make sure we have a good connection
        my $rv = eval{$soap->echo()->result};
        return $soap if $rv;
        return undef;
}

